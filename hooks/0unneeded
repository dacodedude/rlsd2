HOOK_NAME="remove unneeded files"

run() {
	for i in ./share/gtk-doc \
	         ./share/aclocal \
	         ./share/info \
	         ./share/libxml2 \
	         ./share/info \
	         ./share/pixmaps \
	         ./share/applications \
	         ./share/bash-completion \
	         ./share/gdb \
	         ./share/glib-2.0 \
	         ./bin/gobject-* \
	         ./bin/gio-* \
	         ./bin/glib-* \
	         ./bin/gdbus-* \
	         ./bin/gtester-* \
	         ./bin/gapplication \
	         ./bin/gsettings \
	         ./bin/gresource \
	         ./bin/gdbus \
	         ./bin/gtester \
	         ./lib/locale \
	         ./lib/*.* \
	         ./lib/alsa-lib/smixer/* \
	         ./include \
	         ./lib/pkgconfig \
	         ./bin/*-config \
	         ./man/man1/*-config.1 \
	         ./man/man2 \
	         ./man/man3
	do
		rm -rvf "$i" 2>/dev/null
	done

	rmdir ./share/* 2>/dev/null
	rmdir ./man/* 2>/dev/null
	rmdir ./* 2>/dev/null
}
