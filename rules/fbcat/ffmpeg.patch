-fi
-sleep "$wait_after_switch"
-fbcat "$device" | ppm2png "$1"
-if [ -n "$current_vt" ]
-then
-  chvt "$current_vt"
+	rm -f "$tmp"
+	exit $ret
 fi
 
-# vim:ts=2 sw=2 et
+ffmpeg -loglevel quiet -i "$tmp" "$output"
+ret=$?
+rm -f "$tmp"
+[ 0 -ne $ret ] && exit $ret
+
+exit 0
