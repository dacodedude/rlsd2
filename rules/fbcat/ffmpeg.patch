-  esac
-done
+case $# in
+	2)
+		device="$1"
+		output="$2"
+		;;
+
+	1)
+		device=""
+		output="$1"
+		;;
+
+	*)
+		echo "Usage: $0 [DEVICE] OUTPUT" 1>&2
+		exit 
+		;;
+esac
 
-[ $# -ne 1 ] && usage
-
-if command -v pnmtopng >/dev/null 2>/dev/null
-then
-  ppm2png()
