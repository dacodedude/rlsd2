PKG_VER="1.6"
PKG_SRCS="http://ftp.gnu.org/gnu/gzip/gzip-$PKG_VER.tar.xz"
PKG_DESC="Compression tools"
PKG_DEPS="musl diffutils"

get_latest() {
	wget -q -O - "http://ftp.gnu.org/gnu/gzip/" |
	grep "\.tar" |
	tail -n 1 |
	cut -f 3 -d \- |
	sed s~'\.tar.*'~~
}

build() {
	./configure --prefix="" \
	            --datarootdir="/"
	[ 0 -ne $? ] && return 1

	$MAKE
}

package() {
	$MAKE DESTDIR="$1" install
	install -D -m 644 README "$1/doc/gzip/README"
	install -m 644 NEWS "$1/doc/gzip/NEWS"
	install -m 644 ChangeLog "$1/doc/gzip/ChangeLog"
	install -m 644 ChangeLog-2007 "$1/doc/gzip/ChangeLog-2007"
	install -m 644 AUTHORS "$1/doc/gzip/AUTHORS"
	install -m 644 THANKS "$1/doc/gzip/THANKS"
	install -m 644 COPYING "$1/doc/gzip/COPYING"
}
