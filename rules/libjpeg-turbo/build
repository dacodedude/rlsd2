PKG_VER="1.4.0"
PKG_SRCS="http://sourceforge.net/projects/libjpeg-turbo/files/$PKG_VER/libjpeg-turbo-$PKG_VER.tar.gz"
PKG_DESC="A library for handling JPEG images"
PKG_DEPS="musl"

get_latest() {
	wget -q -O - "http://sourceforge.net/projects/libjpeg-turbo/files/" |
	grep "Click to enter" |
	grep -v "beta" |
	head -n 1 |
	awk '{print $4}' |
	sed s~\"\$~~
}

build() {
	./configure --prefix="" \
	            --datadir="/" \
	            --mandir="/man" \
	            --enable-static \
	            --disable-shared \
	            --without-jpeg7 \
	            --without-jpeg8 \
	            --without-turbojpeg
	[ 0 -ne $? ] && return 1

	$MAKE
}

package() {
	$MAKE DESTDIR="$1" install
}
